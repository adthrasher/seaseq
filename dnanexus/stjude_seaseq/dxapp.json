{
  "name": "seaseq",
  "title": "Single-End Antibody sequencing workflow",
  "summary": "Run SEAseq workflow",
  "dxapi": "1.0.0",
  "version": "1.1.0",
  "openSource" : true,
  "inputSpec": [
    {
      "name": "reference",
      "class": "file",
      "optional": false,
      "help": "Reference FASTA file.",
      "patterns": [
        "*.fa",
        "*.fa.gz",
        "*.fasta",
        "*.fasta.gz"
      ]
    },
    {
      "name": "blacklist",
      "class": "file",
      "optional": true,
      "help": "If defined, blacklist regions listed are excluded after reference alignment.",
      "patterns": [
        "*.bed",
        "*.bed.gz"
      ]
    },
    {
      "name": "gtf",
      "class": "file",
      "optional": false,
      "help": "Input gene annotation file from RefSeq or GENCODE (.gtf).",
      "patterns": [
        "*.gff",
        "*.gtf",
        "*.gff3",
        "*.gff.gz",
        "*.gtf.gz",
        "*.gff3.gz"
      ]
    },
    {
      "name": "bowtie_index",
      "class": "array:file",
      "optional": true,
      "help": "If not defined, bowtie v1 index files are generated, will take a longer compute time.",
      "patterns": [
        "*.ebwt"
      ]
    },
    {
      "name": "motif_databases",
      "class": "array:file",
      "optional": true,
      "help": "Input one or more motif databases available from the MEME suite (https://meme-suite.org/meme/db/motifs).",
      "patterns": [
        "*.meme"
      ]
    },
    {
      "name": "sra_id",
      "class": "array:string",
      "optional": true,
      "help": "Input publicly available FASTQs (SRRs). Multiple SRRs are separated by commas (,). e.g. SRR12345678"
    },
    {
      "name": "fastqfile",
      "class": "array:file",
      "optional": true,
      "help": "Upload zipped FASTQ files.",
      "patterns": [
        "*.fq.gz",
        "*.fastq.gz"
      ]
    },
    {
      "name": "filename_prefix",
      "class": "string",
      "optional": true,
      "help": "Input results name prefix (recommended if multiple FASTQs are provided)."
    }
  ],
